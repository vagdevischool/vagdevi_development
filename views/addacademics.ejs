    <div class="row">
    <div class="col-12 col-md-6 box-2 eventform">
        <br>
        <center>
            <h3>Add student</h3>
        </center>
        <br>
        <div>
            <form class="needs-validation" novalidate id="user-form" action="/addacademics" method="POST" enctype="multipart/form-data" style="margin-left: 2%;">
                <div class="form-group row">
                    <label for="class" class="col-md-4 col-form-label"
                        ><b>Class: </b></label
                    >
                    <div class="col-md-6">
                        <input
                            type="text"
                            class="form-control"
                            id="class"
                            placeholder="class"
                            name="class"
                            required
                        />
                        <div class="invalid-feedback">
                            Please fill out this field.
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="section" class="col-md-4 col-form-label"
                        ><b>Section: </b></label
                    >
                    <div class="col-md-6">
                        <input
                            type="text"
                            class="form-control"
                            id="section"
                            placeholder="section"
                            name="section"
                            required
                        />
                        <div class="invalid-feedback">
                            Please fill out this field.
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="studentname" class="col-md-4 col-form-label"
                        ><b>Student Name: </b></label
                    >
                    <div class="col-md-6">
                        <input
                            type="text"
                            class="form-control"
                            id="studentname"
                            placeholder="Enter student name"
                            name="studentname"
                            required
                        />
                        <div class="invalid-feedback">
                            Please fill out this field.
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="rank" class="col-md-4 col-form-label"
                        ><b>Rank</b></label
                    >
                    <div class="col-md-6">
                        <select name="rank" id="rank">
                            <option>Choose</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="image" class="col-md-4 col-form-label label-1"
                        ><b>Image: </b></label
                    >
                    <div class="col-md-6">
                      <input type="file" id="image"
                      name="image" value="" required class="form-control">
                        <div class="invalid-feedback">
                            Please fill out this field.
                        </div>
                    </div>
                </div>
                <button class="btn submit btn-primary col-md-4 offset-2">
                    Submit
                </button>
            </form>
            <br>
        </div>
    </div>
    <div class="col-12 col-md-5 mar box-2 eventform">
        <div>
            <form class="needs-validation" novalidate id="user-form" action="/deletestudent_academics" method="POST">
                <br>
                <center>
                    <h3>Delete Student</h3>
                </center>
                <br>
                <div class="form-group row">
                    <label for="class" class="col-md-4 col-form-label"
                        ><b>Class: </b></label
                    >
                    <div class="col-md-6">
                        <input
                            type="text"
                            class="form-control"
                            id="class"
                            placeholder="class"
                            name="class"
                            required
                        />
                        <div class="invalid-feedback">
                            Please fill out this field.
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="section" class="col-md-4 col-form-label"
                        ><b>Section: </b></label
                    >
                    <div class="col-md-6">
                        <input
                            type="text"
                            class="form-control"
                            id="section"
                            placeholder="section"
                            name="section"
                            required
                        />
                        <div class="invalid-feedback">
                            Please fill out this field.
                        </div>
                    </div>
                </div>
                    <div class="form-group row">    
                    <label for="eventname1" class="col-md-4 col-form-label label-1"
                        ><b>Student Name: </b></label
                    >
                    <div class="col-md-7">
                        <input
                            type="text"
                            class="form-control"
                            id="studentname1"
                            placeholder="Enter student name"
                            name="studentname1"
                            required
                        />
                        <div class="invalid-feedback">
                            Please fill out this field.
                        </div>
                    </div>
                </div>
                <button class="btn submit btn-danger submit-1 col-md-3 offset-2" id="delete-button">
                    Delete
                </button>
            </form>
        </div>
        
    </div>
    <div class="col-12 col-md-5 mar box-2 eventform">
