<%- include("header", {active: "contact"}); %>
    <div class="container" style="margin-top: 12%; border: 2px solid lightgray; overflow-x:hidden;">
        <h4 style="margin-top: 3%;">Contact Us</h4>
        <form class="needs-validation" novalidate id="user-form" action="/addmessages" method="POST">
            <div class="form-group row">
                <label for="mob" class="col-md-2 col-form-label"
                    ><b>Parent mobile no: </b></label
                >
                <div class="col-md-8">
                    <input
                        type="text"
                        class="form-control"
                        id="mob"
                        placeholder="Enter Parent Mobile Number"
                        name="mob"
                        required
                    />
                    <div class="invalid-feedback">
                        Please fill out this field.
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="name" class="col-md-2 col-form-label"
                    ><b>Student Name: </b></label
                >
                <div class="col-md-8">
                    <input
                        type="text"
                        class="form-control"
                        id="name"
                        placeholder="Enter Your Name"
                        name="name"
                        required
                    />
                    <div class="invalid-feedback">
                        Please fill out this field.
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="class" class="col-md-2 col-form-label"
                    ><b>class/section:</b></label
                >
                <div class="col-md-8">
                    <textarea
                        type="text"
                        class="form-control"
                        id="class"
                        name="class"
                        placeholder="Enter your wards class/section or new for taking admission"
                        required
                    ></textarea>
                    <div class="invalid-feedback">
                        Please fill out this field.
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="requ" class="col-md-2 col-form-label"
                    ><b>Enquiry:</b></label>
                <div class="col-md-8">
                    <textarea
                        class="form-control"
                        id="requ"
                        name="requ"
                        rows="6"
                        placeholder="Write your queries and our team will connect with you"
                        required
                    ></textarea>
                    <div class="invalid-feedback">
                        Please fill out this field.
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-3 offset-4" style="margin-bottom: 3%;">
                <button class="btn btn-success">
                    Send Message
                </button>
            </div>
        </form>
    </div>
    
    <%- include('footer'); -%>
  
  
  
  
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
     
    </body>
</html>