<%- include("header"); -%>

    <div class="container" style="margin-top: 12%;">
        <h4>Contact Us for through whatsup</h4>
        <form class="needs-validation" novalidate id="user-form">
            <div class="form-group row">
                <label for="name" class="col-md-2 col-form-label"
                    ><b>Student Name: </b></label
                >
                <div class="col-md-4">
                    <input
                        type="text"
                        class="form-control"
                        id="name"
                        placeholder="Enter Your Name"
                        name="name"
                        required
                    />
                    <div class="invalid-feedback">
                        Please fill out this field.
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="address" class="col-md-2 col-form-label"
                    ><b>class/section:</b></label
                >
                <div class="col-md-4">
                    <textarea
                        type="text"
                        class="form-control"
                        id="address"
                        name="address"
                        placeholder="Enter Your wards class/section or new for taking admission"
                        required
                    ></textarea>
                    <div class="invalid-feedback">
                        Please fill out this field.
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="req" class="col-md-2 col-form-label"
                    ><b>Enquiry:</b></label>
                <div class="col-md-4">
                    <textarea
                        class="form-control"
                        id="req"
                        name="address"
                        rows="6"
                        placeholder="Write your querries and our team will connect with you"
                        required
                    ></textarea>
                    <div class="invalid-feedback">
                        Please fill out this field.
                    </div>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-12 col-md-1">
                <button class="button bg-primary" onclick="reload()">
                    Reset
                </button>
                <div class="d-block d-sm-none">
                    <br />
                </div>
            </div>
            <div class="col-12 col-md-3">
                <button class="button" onclick="formValidation()">
                    Send Through Whatsapp
                    <i class="fa fa-whatsapp fa-inverse fa-x"></i>
                </button>
            </div>
        </div>
    </div>
    
    <%- include('footer'); -%>
  
  
  
  
